<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgSkypeTM"
    tools:context=".Login.View.LoginActivity">

    <ImageView
        android:background="@drawable/logoskypetm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_login_logoImageView" />

    <TextView
        android:text="WELCOME BACK"
        android:textColor="@color/titleSkypeTM"
        android:textStyle="normal"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="200dp"
        android:id="@+id/activity_login_titleTextView" />

    <EditText
        android:hint="EMAIL"
        android:textColorHint="#e6eaf2"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="10dp"
        android:minLines="1"
        android:maxLines="1"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="18dp"
        android:id="@+id/activity_login_emailEditText"/>

    <EditText
        android:hint="PASSWORD"
        android:textColorHint="#e6eaf2"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="10dp"
        android:minLines="1"
        android:maxLines="1"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="18dp"
        android:id="@+id/activity_login_passwordEditText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <CheckBox
            android:button="@drawable/checkbox_selector"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="0.08"
            android:id="@+id/activity_login_rememberMeCheckBox"/>

        <TextView
            android:text="@string/remember"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_login_loginButton"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:text="@string/warningaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/titleSkypeTM"
            android:text="@string/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_registerTextView"/>
    </LinearLayout>
</RelativeLayout>